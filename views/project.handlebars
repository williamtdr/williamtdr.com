<div id="content" class="animsition zoom-in-sm project-content container" data-animsition-in-duration="750">
	<h1>{{name}}</h1>
	{{#if yt_video}}
		<iframe width="640" height="480" src="https://www.youtube.com/embed/{{yt_video}}?modestbranding=1&autohide=1&showinfo=0" frameborder="0" allowfullscreen></iframe><br><br>
	{{/if}}
	<div id="description">
		{{{description}}}
	</div>
	<br>
	{{#if tools}}<span class="tag-header">Tools & Frameworks</span>{{/if}}
	<div class="tag-group">
	{{#each tools}}
		<div class="tag">{{this}}</div>
	{{/each}}
	</div>
	{{#if languages}}<span class="tag-header">Programming Languages</span>{{/if}}
	<div class="tag-group">
	{{#each languages}}
		<div class="tag">{{this}}</div>
	{{/each}}
	</div>
	{{#if tags}}<span class="tag-header">Tags</span>{{/if}}
	<div class="tag-group">
	{{#each tags}}
		<div class="tag">{{this}}</div>
	{{/each}}
	</div>
</div>